<?xml version="1.0" encoding="utf-8"?>
<?indiezen version="1.0"?>
<plugin
   id="SessionClient"
   name="Zen Worlds Session Client"
   version="0.4.0"
   provider-name="IndieZen.org">

  <runtime>
    <library name="SessionClient">
      <export name="*"/>
    </library>
  </runtime>

  <requires>
    <import plugin="Framework"/>
  </requires>

  <extension
        point="Zen::Enterprise::AppServer::ApplicationService"
        id="SessionClient"
        name="Zen Worlds Session Client"
        type="SessionClient">
    <application-service
          class="Worlds::SessionService">
    </application-service>
  </extension>

</plugin>
